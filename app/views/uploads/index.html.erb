<h1>Listing uploads</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @uploads.each do |upload| %>
      <tr>
         <td>
         <%= image_tag upload.avatar.url(:medium) %>
         <%= image_tag upload.avatar.url(:thumb) %></td>
        <td><%= upload.path %></td>
        <td><%= link_to 'Show', upload %></td>
        <td><%= link_to 'Destroy', upload, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Upload', new_upload_path %>
